{
  "name": "whisper-transcribe",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "author": "Josh Jones",
  "description": "A desktop application for audio transcription using Whisper",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@xenova/transformers": "^2.15.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.joshjones.whispertranscribe",
    "productName": "Soly Transcribe",
    "copyright": "Copyright Â© 2025 Josh Jones",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "dist_electron",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/models",
        "to": "models",
        "filter": ["**/*"]
      }
    ],
    "publish": null
  }
}
